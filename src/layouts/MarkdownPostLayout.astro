---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <p><em>{frontmatter.description}</em></p>
    <p class="desc">Written by {frontmatter.author}</p>
    <p class="desc">Published on: {frontmatter.pubDate.toString().slice(0,10)}</p>
    <hr>
    <slot />
</BaseLayout>
<style>
    .desc {
        margin: 1px;
        padding: 2px;
    }

</style>